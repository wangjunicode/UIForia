<?xml version="1.0" encoding="utf-8"?>
<UITemplate>

    <Style>
        "
        style friend-container {
            MarginLeft = 20px;
        }
        "
    </Style>
    
    <Contents>
        <Div>{player.id} -> {player.name}</Div>
        <Heading1>Friends:</Heading1>
        <Group style="friend-container">
            <Repeat list="player.friends">
                <PlayerDetail player="$item" />
            </Repeat>
        </Group>
    </Contents>

</UITemplate>